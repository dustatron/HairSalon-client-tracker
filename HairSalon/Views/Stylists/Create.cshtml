@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<div class="col-md-6 offset-md-3">
  <div class="form-box">
    @using (Html.BeginForm())
    {
      <div class="form-header">Add A Stylist</div>
      <div class="form-body">
        <div class="form-group">
          @Html.LabelFor(model => model.StylistName)
          @Html.TextBoxFor(model => model.StylistName, new { @class="form-control", @placeholder = "Stylist's Name", required = "required"})
        </div>
        <div class="form-group">
          @Html.LabelFor(model => model.Specialty)
          @Html.TextBoxFor(model => model.Specialty, new { @class="form-control", @placeholder = "Specialty"})
        </div>
        <div class="form-group">
          @Html.LabelFor(model => model.Rate)
          @* @Html.TextBoxFor(model => model.Rate, new { @class="form-control", @placeholder = "Hourly Rate"}) *@
          @Html.TextBoxFor(model => model.Rate, new { @class="form-control", @placeholder = "Hourly Rate", @type = "number"})
        </div>
        <input type="submit" value="Add" class="btn btn-primary btn-block">
      </div>
    }
  </div>
</div>