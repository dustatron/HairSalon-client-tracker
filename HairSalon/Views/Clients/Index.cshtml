@{
    Layout = "_Layout";
}
<h2 class="text-center">Client Index</h2>
@using HairSalon.Models;

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if ( ViewBag.ClientList.Count == 0)
        {
            <h3>Please Enter A Client</h3>
            <a href="/clients/create">
                <button class="btn btn-primary">Add A Client</button>
            </a>
        } 
        else
        {
            <ul>
            @foreach (Client client in ViewBag.ClientList)
            {
                <li>
                    @Html.ActionLink($"{client.Name}", "Show", new {id = client.ClientId})
                </li>
            }
            </ul>

            @Html.ActionLink("Add A Stylist", "Create", null, htmlAttributes: new {@class="btn btn-primary btn-lg"})
        }
    </div>
</div>