@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client;

<div class="col-md-6 offset-md-3">
    @if( ViewBag.StylistCount == 0 )
    {
      <h2 class="client-header">Please enter a stylist</h2>
      <p class="text-center">You must enter a stylist before you can enter a client.</p>
      <div class="text-center">
        @Html.ActionLink("Add A Stylist", "Create", "Stylists", null, new {@class="btn btn-success"})
      </div>
    }
    else
    {
      @using (Html.BeginForm())
      {
        <div class="form-box">
          <div class="form-header2">Add A Client</div>
          <div class="form-body">
            <div class="form-group">
              @Html.LabelFor(model => model.Name)
              @Html.TextBoxFor(model => model.Name, new { @class="form-control", @placeholder = "Client's Name", required = "required"})
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.Note)
              @Html.TextBoxFor(model => model.Note, new { @class="form-control", @placeholder = "What are they like?"})
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.StylistId)
              @Html.DropDownList("StylistId", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new {@class="form-control"})
            </div>
            <button type="submit" class="btn btn-primary btn-block">Add</button>
          </div>
        </div>
      }
    }
</div>